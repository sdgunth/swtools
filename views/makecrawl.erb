<% content_for :page_title do %>
<title>Star Wars Tools - Crawl Creator</title>
<% end %>

<% content_for :more_js do %>
		<script src="/js/makecrawl.js"></script>
<% end %>

<div class="col-lg-12">
	<div class="panel panel-primary" style="max-width: 800px;">
		<div class="panel-heading">Crawl Creator</div>
		<div class="panel-body">
			<div class"form-horizontal">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="text" class="form-control" id="name" name="crawlname">
				</div>
				<div class="form-group">
					<label for="contents">Paragraph</label>
					<textarea class="form-control" rows="5"></textarea>
				</div>
				<button class="btn btn-default" id="add_paragraph">Add Paragraph</button>
				<button class="btn btn-default" id="remove_paragraph">Remove Paragraph</button>
				<br><br>
				<button class="btn btn-default" id="submit_button">Save</button>
				</div>
			</div>
		</div>
	</div>
</div>